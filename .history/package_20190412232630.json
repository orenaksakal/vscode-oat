{
    "name": "vscode-oat",
    "displayName": "vscode-oat",
    "description": "Extension to auto convert object access to safe object access. (&& chain)",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onLanguage:vue",
        "onLanguage:vue-html"
    ],
    "main": "./out/extension.js",
	"contributes": {
        "configuration": {
            "type": "object",
            "title": "Object access transformer configuration",
            "properties": {
				"vscode-oat.quotationStyle": {
                    "type": "string",
                    "enum": [
                        "&&",
						"Ternary",
						"Elvis"
                    ],
                    "default": "&&",
                    "description": "Accessor style you prefer."
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "command": "vscode-oat.transform6to5",
                    "group": "formatter",
                    "when": "editorHasSelection"
                }
            ]
        },
        "commands": [
            {
                "command": "vscode-oat.transform6to5",
                "title": "%command.vscode-oat.6to5%"
            },
            {
                "command": "vscode-oat.transform5to6",
                "title": "%command.vscode-oat.5to6%"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
